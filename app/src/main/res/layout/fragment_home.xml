<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile"
    tools:context=".acitivity.ui.home.HomeFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/menu"
            android:layout_width="30dp"
            android:layout_height="25dp"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/home"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>


        <LinearLayout
            android:padding="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="#EE5024"
                android:textSize="20dp"
                android:text="Select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="10dp"
                android:textColor="#EE5024"
                android:textSize="20dp"
                android:text="Company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:text="See The"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:text="Generic Model "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:background="#EE5024"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="Generic Model "
                android:layout_width="wrap_content"
                android:layout_height="3dp"/>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#F2F2F2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Shubham Chauhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/user_colour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/contact"
                        android:layout_width="25dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="8571056426"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/email_colour"
                        android:layout_width="25dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="Delhi@1234gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/location"
                        android:layout_width="25dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="Delhi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

</LinearLayout>